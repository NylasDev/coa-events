# Environment Configuration
NODE_ENV=development
PORT=3000

# Discord OAuth Configuration
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:3000/auth/discord/callback

# Session Secret (Generate a random string)
SESSION_SECRET=your_random_session_secret_here

# Discord Server Configuration
ALLOWED_GUILD_ID=your_discord_server_id_here

# Discord Bot & Webhook Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
DISCORD_WEBHOOK_SECRET=your_webhook_secret_here

# Discord Notification Channel
DISCORD_EVENTS_CHANNEL=events

# MCP Configuration (if applicable)
MCP_SERVER_URL=http://localhost:3001
MCP_API_KEY=your_mcp_api_key_here

# Application URL (change for production)
APP_URL=http://localhost:3000
